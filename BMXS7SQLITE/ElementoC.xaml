<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMXS7SQLITE.ElementoC">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ACTUALIZAR - ELIMINIAR" FontSize="24" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtNombreC" Placeholder="NombreCancha"/>
            <Entry x:Name="txtDireccion" Placeholder="Direccion"/>
            <Entry x:Name="txtprecio" Placeholder="Precio"/>
            <Entry x:Name="txtestado" Placeholder="Estado"/>

            <Button x:Name="btnActualizar" Text="ACTUALIZAR" Clicked="btnActualizar_Clicked"/>
            <Button x:Name="btnEliminar" Text="ELIMINAR" Clicked="btnEliminar_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>