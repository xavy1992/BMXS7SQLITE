<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMXS7SQLITE.Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Ventana Login" FontSize="24" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtUsuario" Placeholder="Usuario"/>
            <Entry x:Name="txtContrasena" Placeholder="Contraseña" />
            <Button x:Name="btnIniciar" Text="INICIAR SESION" Clicked="btnIniciar_Clicked"/>
            <Button x:Name="btnRegistar" Text="REGISTRAR" Clicked="btnRegistar_Clicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>