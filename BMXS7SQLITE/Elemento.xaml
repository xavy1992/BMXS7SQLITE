<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BMXS7SQLITE.Elemento">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ACTUALIZAR - ELIMINIAR" FontSize="24" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtNombre" Placeholder="Nombre"/>
            <Entry x:Name="txtUsuario" Placeholder="Usuario"/>
            <Entry x:Name="txtContrasena" Placeholder="Contrasena"/>

            <Button x:Name="btnActualizar" Text="ACTUALIZAR"   Clicked="btnActualizar_Clicked"/>
            <Button x:Name="btnEliminar" Text="ELIMINAR" Clicked="btnEliminar_Clicked"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>